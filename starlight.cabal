cabal-version:       2.2

name:                starlight
version:             0.0.0.0
-- synopsis:
-- description:
homepage:            https://github.com/robrix/starlight#readme
license:             BSD-3-Clause
license-file:        LICENSE
author:              Rob Rix
maintainer:          rob.rix@me.com
copyright:           Rob Rix
-- category:            Web
build-type:          Simple
extra-source-files:  README.md

data-files:
  ephemerides/ephemerides.db

common common
  default-language: Haskell2010
  ghc-options:
    -Weverything
    -Wno-all-missed-specialisations
    -Wno-implicit-prelude
    -Wno-missed-specialisations
    -Wno-missing-import-lists
    -Wno-missing-local-signatures
    -Wno-monomorphism-restriction
    -Wno-name-shadowing
    -Wno-safe
    -Wno-unsafe
  if (impl(ghc >= 8.6))
    ghc-options: -Wno-star-is-type
  if (impl(ghc >= 8.8))
    ghc-options: -Wno-missing-deriving-strategies

library
  import:              common
  hs-source-dirs:      src
  exposed-modules:
    Control.Carrier.Empty.Church
    Control.Carrier.Empty.CPS
    Control.Carrier.Finally
    Control.Carrier.Reader.Relation
    Control.Carrier.State.IORef
    Control.Carrier.State.ST.Strict
    Control.Carrier.State.STM.TVar
    Control.Carrier.Thread.IO
    Control.Carrier.Trace.Lift
    Control.Concurrent.Lift
    Control.Effect.Finally
    Control.Effect.Labelled
    Control.Effect.Lens.Exts
    Control.Effect.Thread
    Control.Exception.Lift
    Control.Monad.IO.Class.Lift
    Data.Flag
    Data.Functor.I
    Data.Functor.Interval
    Data.Functor.K
    Foreign.C.String.Lift
    Foreign.Marshal.Alloc.Lift
    Foreign.Marshal.Array.Lift
    Foreign.Marshal.Utils.Lift
    Geometry.Circle
    Geometry.Transform
    Geometry.Triangle
    GL
    GL.Array
    GL.Buffer
    GL.Carrier.Bind
    GL.Carrier.Check.Identity
    GL.Carrier.Check.IO
    GL.Effect.Bind
    GL.Effect.Check
    GL.Enum
    GL.Error
    GL.Framebuffer
    GL.Object
    GL.Primitive
    GL.Program
    GL.Shader
    GL.Shader.Decl
    GL.Shader.DSL
    GL.Shader.Expr
    GL.Shader.Stmt
    GL.Shader.Vars
    GL.Texture
    GL.TextureUnit
    GL.Type
    GL.Viewport
    GL.Uniform
    Linear.Exts
    Starlight.Actor
    Starlight.AI
    Starlight.Body
    Starlight.Character
    Starlight.CLI
    Starlight.Controls
    Starlight.Draw
    Starlight.Draw.Body
    Starlight.Draw.Radar
    Starlight.Draw.Ship
    Starlight.Draw.Starfield
    Starlight.Draw.Weapon.Laser
    Starlight.Game
    Starlight.Identifier
    Starlight.Integration
    Starlight.Input
    Starlight.Main
    Starlight.Physics
    Starlight.Radar
    Starlight.Ship
    Starlight.Sol
    Starlight.System
    Starlight.Time
    Starlight.UI
    Starlight.View
    Starlight.Weapon.Laser
    Stochastic.Distribution
    Stochastic.Histogram
    Stochastic.PDF
    Stochastic.Sample.Markov
    Stochastic.Sample.Metropolis
    Stochastic.Sample.Rejection
    Stochastic.Sample.Slice
    UI.Colour
    UI.Context
    UI.Drawable
    UI.Glyph
    UI.Graph
    UI.Graph.Lines
    UI.Graph.Points
    UI.Graph.Vertex
    UI.Label
    UI.Label.Glyph
    UI.Label.Text
    UI.Path
    UI.Typeface
    UI.Window
    Unit
    Unit.Algebra
    Unit.Angle
    Unit.Count
    Unit.Density.Number.Areal
    Unit.Force
    Unit.Length
    Unit.Mass
    Unit.Multiple
    Unit.Power
    Unit.Time
  other-modules:
    Paths_starlight
  autogen-modules:
    Paths_starlight
  build-depends:
      base
    , containers
    , direct-sqlite ^>= 2.3
    , directory ^>= 1.3
    , filepath ^>= 1.4
    , fused-effects      ^>= 1
    , fused-effects-lens ^>= 1.2
    , fused-effects-profile
    , fused-effects-random
    , generic-lens
    , gl
    , lens
    , linear
    , opentype
    , optparse-applicative
    , prettyprinter
    , prettyprinter-ansi-terminal
    , random
    , sdl2 ^>= 2.5
    , splitmix
    , stm ^>= 2.5
    , terminal-size
    , text
    , time ^>= 1.9
    , transformers ^>= 0.5
    , unordered-containers
    , vector ^>= 0.12
    , vulkan-api

executable starlight
  import:              common
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base
    , starlight

source-repository head
  type:     git
  location: https://github.com/robrix/starlight
